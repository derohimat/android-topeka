<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.anton46.collectionitempicker.CollectionPicker
        android:id="@+id/collection_item_picker"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        app:cp_addIcon="@android:drawable/ic_menu_add"
        app:cp_cancelIcon="@android:drawable/ic_menu_close_clear_cancel"
        app:cp_itemBackgroundNormal="@color/topeka_primary"
        app:cp_itemBackgroundPressed="@color/topeka_accent"
        app:cp_itemMargin="@dimen/spacing_micro"
        app:cp_simplified="false"
        app:cp_textPaddingBottom="@dimen/spacing_micro"
        app:cp_textPaddingLeft="@dimen/spacing_normal"
        app:cp_textPaddingRight="@dimen/spacing_normal"
        app:cp_textPaddingTop="@dimen/spacing_micro"/>
</LinearLayout>